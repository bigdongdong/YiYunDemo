            <Button
                android:id="@+id/hideBFraBtn"
                android:text="hide B"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/removeAFraBtn"
            android:text="remove A"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/removeBFraBtn"
