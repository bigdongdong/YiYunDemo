<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scrolls.scrollview_toolbar.ScrollViewToolbarActivity"
    >

    <com.chen.firstdemo.scrolls.scrollview_toolbar.StickyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:stickyHeader="@id/stickyView"

        >
        <LinearLayout
            android:background="@color/grey"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/firstView"
                android:layout_width="match_parent"
                android:layout_height="900px"/>
            <TextView
                android:id="@+id/tvTitle2"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:paddingLeft="80dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:text="我是你的小海胆"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <View
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <RelativeLayout
                android:id="@+id/stickyView"
                android:layout_marginTop="-50dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <View
                    android:id="@+id/chuantouView"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <FrameLayout
                    android:id="@+id/tabFL"
                    android:background="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </RelativeLayout>

            <!--viewpager-->
            <com.chen.firstdemo.scrolls.scrollview_toolbar.MyViewPager
                android:id="@+id/viewPager"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </com.chen.firstdemo.scrolls.scrollview_toolbar.StickyScrollView>



    <RelativeLayout
        android:id="@+id/toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:text="我是你的小海胆"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/ivBack"
            android:src="@mipmap/back_white_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </RelativeLayout>

</RelativeLayout>