<?xml version="1.0" encoding="utf-8"?>
<com.chen.firstdemo.sticky_nest_scrollview_demo.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sticky="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sticky_nest_scrollview_demo.StickyNestScrollViewActivity"
    sticky:ssv_header = "@id/header"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="#333333"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <View
            android:background="#333333"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <View
            android:background="#333333"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <View
            android:id="@+id/header"
            android:background="#333333"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="500px"/>
    </LinearLayout>

</com.chen.firstdemo.sticky_nest_scrollview_demo.StickyScrollView>