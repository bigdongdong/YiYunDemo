<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <RelativeLayout
        android:background="@mipmap/dialog_goto_earn_gold_coin"
        android:layout_width="250dp"
        android:layout_height="346.2dp">
        <TextView
            android:id="@+id/confirmTV"
            android:gravity="center"
            android:text="点我去赚钱"
            android:textColor="#FFFF8400"
            android:textSize="15sp"
            android:layout_marginBottom="19dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/tv_goto_earn_gold_coin_background"
            android:layout_width="155dp"
            android:layout_height="36dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dismissLL"
        android:gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dismissIV"
            android:background="#00000000"
            android:layout_marginTop="30dp"
            android:src="@mipmap/icon_dialog_dismiss"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>
