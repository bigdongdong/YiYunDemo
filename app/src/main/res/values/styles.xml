<resources xmlns:mce="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--弹框背景全透明-->
    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
<!--        <item name="android:windowIsFloating">true</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
<!--&lt;!&ndash;        <item name="android:windowIsTranslucent">true</item>&ndash;&gt;-->
<!--        <item name="android:backgroundDimEnabled">false</item>-->
<!--        <item name="android:backgroundDimAmount">0.1</item>-->
    </style>

    <!--背景半透明-->
    <style name="dialog_half_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>


    <!--popwindow 底部弹出动画-->
    <style name="pop_bottom_animation" parent="android:Animation">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnterAnimation">@anim/pop_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_out</item>
    </style>



</resources>
